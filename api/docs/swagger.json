{
    "swagger": "2.0",
    "info": {
        "description": "API para controle de apontamento de horas do Nexus.",
        "title": "Nexus Tracker API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Lucas Gretti",
            "email": "lucassgretti@gmail.com"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/contracts": {
            "get": {
                "description": "Retorna a lista completa de contratos com dados da empresa (JOIN)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "Lista todos os contratos",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Contract"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Valida as datas e insere um novo contrato no banco",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "Cria um novo contrato",
                "parameters": [
                    {
                        "description": "Objeto Contrato",
                        "name": "contract",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.Contract"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.Contract"
                        }
                    },
                    "400": {
                        "description": "Erro de validação",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/contracts/{id}": {
            "put": {
                "description": "Atualiza os dados de um contrato pelo ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "Atualiza um contrato existente",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID do Contrato",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Objeto Contrato Atualizado",
                        "name": "contract",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.Contract"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Contract"
                        }
                    },
                    "400": {
                        "description": "ID inválido ou datas incorretas",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Contrato não encontrado",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Contract": {
            "type": "object",
            "properties": {
                "companyId": {
                    "type": "integer"
                },
                "companyName": {
                    "type": "string"
                },
                "contractType": {
                    "type": "string"
                },
                "endDate": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "isActive": {
                    "type": "boolean"
                },
                "startDate": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "totalHours": {
                    "type": "integer"
                }
            }
        }
    }
}